{% block modal_header_wrap %}
<div class="modal-header">
{% block modal_header %}
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="fima-modal-label">{% block modal_header_label %}Modal header{% endblock modal_header_label %}</h3>
{% endblock modal_header %}    
</div>
{% endblock modal_header_wrap %}

{% block modal_body_wrap %}
<div class="modal-body">
{% block modal_body %}
    <p>One fine body…</p>
{% endblock modal_body %}        
</div>
{% endblock modal_body_wrap %}

{% block modal_footer_wrap %}
<div class="modal-footer">
{% block modal_footer %}
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary">Save changes</button>
{% endblock modal_footer %}        
</div>
{% endblock modal_footer_wrap %}
